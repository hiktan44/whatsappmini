# Production Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://*.minimax.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (Production)
REDIS_URL=redis://localhost:6379
REDISCLOUD_URL=redis://username:password@host:port

# Session Management
SESSION_TTL_HOURS=24
QR_EXPIRY_SECONDS=45
MAX_CONCURRENT_SESSIONS=50
SESSION_CLEANUP_INTERVAL_MINUTES=5

# WhatsApp Web Configuration
WHATSAPP_WEB_VERSION=2.2412.54
PUPPETEER_TIMEOUT_MS=60000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
MEMORY_THRESHOLD_MB=512
CPU_THRESHOLD_PERCENT=80

# Railway.app specific
RAILWAY_STATIC_URL=https://your-service.railway.app
RAILWAY_ENVIRONMENT_NAME=production
